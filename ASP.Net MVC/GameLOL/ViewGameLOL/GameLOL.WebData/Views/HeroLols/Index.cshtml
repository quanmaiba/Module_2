@model IEnumerable<GameLol.DoMain.HeroLol>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NameHero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HitRangeHero)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameHero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HitRangeHero.HitRangeHeroID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.HeroID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.HeroID">Details</a> |
