@page "{id:int}"
@model RazorPage.Pages.QLSach.AddOrEditModel
@{
    ViewData["Title"] = "AddOrEdit";
}

<br />
<h2 class="text-info">Create New Student</h2>
<div class="border">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="QuanLySach.Id" />
        <div class="container" style="padding:30px;">
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="QuanLySach.TenSach"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="QuanLySach.TenSach" class="form-control" />
                    </div>
                    <span asp-validation-for="QuanLySach.TenSach" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="QuanLySach.TenTacGia"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="QuanLySach.TenTacGia" class="form-control" />
                    </div>
                    <span asp-validation-for="QuanLySach.TenTacGia" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="QuanLySach.MoTa"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="QuanLySach.MoTa" class="form-control" />
                    </div>
                    <span asp-validation-for="QuanLySach.MoTa" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="QuanLySach.NamSanXuat"></label>
                    </div>
                    <div class="col-sm-4">
                        <input type="number" asp-for="QuanLySach.NamSanXuat" class="form-control" />
                    </div>
                    <span asp-validation-for="QuanLySach.NamSanXuat" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="QuanLySach.SoLuong"></label>
                    </div>
                    <div class="col-sm-4">
                        <input type="text" asp-for="QuanLySach.SoLuong" class="form-control" />
                    </div>
                    <span asp-validation-for="QuanLySach.SoLuong" class="text-danger"></span>
                </div>
            </div>         
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="QuanLySach.TheLoais"></label>
                    </div>
                    <div class="col-sm-4">
                        @*<input asp-for="Student.Address" class="form-control" />*@
                        <select asp-for="QuanLySach.TheLoais" asp-items="@ViewBag.TheLoai" class="form-control"></select>
                    </div>

                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2 offset-sm-2">
                        <input type="submit" value="Submit" class="btn btn-outline-primary form-control" />
                    </div>
                    <div class="col-sm-2">
                        <a asp-page="Index" class="btn btn-outline-danger form-control">Cancel</a>
                    </div>
                </div>
            </div>

        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

