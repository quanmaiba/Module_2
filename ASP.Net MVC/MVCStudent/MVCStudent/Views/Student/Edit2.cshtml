@model MVCStudent.Models.Student

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var group = new List<Group>();
    group = ViewBag.Group;
}

<h1>Edit</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StudentId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UrlImage" class="control-label"></label>
                <input asp-for="UrlImage" class="form-control" />
                <span asp-validation-for="UrlImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="History" class="control-label"></label>
                <input asp-for="History" class="form-control" />
                <span asp-validation-for="History" class="text-danger"></span>
            </div>
            <fieldset class="form-group">
                <div class="row">
                    <label asp-for="Sex" class="col-sm-2 col-form-label text-right">Giới tính</label>
                    <div class="col-sm-2">
                        <div class="mt-2">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" asp-for="Sex" type="radio" value="true" />
                                <label class="form-check-label" asp-for="Sex">Nam</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" asp-for="Sex" type="radio" value="false" />
                                <label class="form-check-label" asp-for="Sex">Nữ</label>
                            </div>
                        </div>
                        <span asp-validation-for="Sex" class="text-danger"></span>
                    </div>
                </div>

            </fieldset>
            <div class="form-group">
                <label asp-for="Group.GroupName" class="control-label"></label>
                @*<select asp-for="Student.Group.GroupName" class="form-control" asp-items="ViewBag.Group"></select>*@
                <select asp-for="GroupId" class="form-control">
                    @foreach (var hero in group)
                    {
                        <option value="@hero.GroupId">@hero.GroupName</option>
                    }
                </select>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

