@model MVCStudent.Models.Student

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var photoPath = "~/Images/" + (Model.UrlImage ?? "anh1.png");
}
<h1>Detail</h1>

<div class="thumbnail">
    <img id="imgDetail" alt="@Model.Name" src=@photoPath asp-append-version="true">
    <div class="caption-full">
        <h3 class="pull-right">@Model.Sex</h3>
        <h3>
            <a href="#">@Model.Name</a>
        </h3>
        @*<h4>@Model.Group.GroupName</h4>*@
        <p>@Model.History</p>
    </div>
</div>
