@model GameLol.DoMain.DescriptionHero
@using GameLol.DoMain
@{
    ViewData["Title"] = "Create";
    var Hero = new List<HeroLol>();
    Hero = ViewBag.Heros;
}
<h1>Create</h1>

<h4>DescriptionHero</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HeroID" class="control-label"></label>
                @*<select asp-for="HeroID" class="form-control" asp-items="ViewBag.HeroID"></select>*@
                <select asp-for="HeroID" class="form-control">
                    @foreach (var item in Hero)
                    {
                        <option value="@item.HeroID">@item.NameHero</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="NameDescriptionHero" class="control-label"></label>
                <input asp-for="NameDescriptionHero" class="form-control" />
                <span asp-validation-for="NameDescriptionHero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescriptionOfHero" class="control-label"></label>
                <input asp-for="DescriptionOfHero" class="form-control" />
                <span asp-validation-for="DescriptionOfHero" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
