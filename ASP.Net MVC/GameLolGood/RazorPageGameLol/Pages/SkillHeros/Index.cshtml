@page
@model RazorPageGameLol.Pages.SkillHeros.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<a asp-page="/SkillHeros/Edit" class="btn btn-primary">Create</a>
<form method="get">
    <div>
        <input type="search" asp-for="SearchKeyWord" />
        <span>
            <button>
                <i>Search</i>
            </button>
        </span>
    </div>
</form>

<table>
    <thead>
        <tr>
            <th>NameSkillHero</th>
            <th>DescriptionSkinHero</th>
            <th>HeroID</th>

        </tr>
    </thead>
    @foreach (var item in Model.skillHeroes)
    {
        <tr>
            <td>@item.NameSkillHero</td>
            <td>@item.DescriptionSkinHero</td>
            <td>@item.HeroID</td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.SkillHeroId">Edit</a> |
                <a asp-page="./Detail" asp-route-id="@item.SkillHeroId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.SkillHeroId">Delete</a>
            </td>
        </tr>
    }
</table>

