@model EditRoleViewModel
@{
    ViewData["Title"] = "Edit Role";
}

<h1>Edit Role</h1>

<form method="post" class="mt-3">
    <div class="form-group row">

        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>

    <div>
        <div class="col-sm-10">
            <input type="submit" class="btn btn-primary" value="Update" />
            <a asp-action="ListRoles" class="btn btn-primary">Cancel</a>

        </div>
    </div>
    <div class="card">
        <div class="card-header">
            <h3>User in this role</h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">None at the moment</h5>
            }
        </div>
        <div class="card-footer">

            <a class="btn btn-primary" style="width:auto"
               asp-action="EditUserInRole" asp-controller="Administration" asp-route-roleId="@Model.Id">Add or remove User</a>
            @*<a class="btn btn-danger" style="width:auto"
               asp-action="CreateRole" asp-controller="Administration">Delete</a>*@
        </div>
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


