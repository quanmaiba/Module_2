@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "All Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Roles</h1>
@if (Model.Any())
{
    <a class="btn btn-primary mb-3" style="width:auto"
       asp-action="CreateRole" asp-controller="Administration">Create Role</a>
    foreach (var role in Model)
    {
        <div class="card">
            <div class="card-header">
                Role ID : @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title"> @role.Name</h5>
            </div>
            <div class="card-footer">

                <a class="btn btn-primary" style="width:auto"
                   asp-action="EditRole" asp-controller="Administration" asp-route-id="@role.Id">Edit</a>
                <a class="btn btn-danger" style="width:auto"
                   asp-action="CreateRole" asp-controller="Administration">Delete</a>
            </div>
        </div>
    }

}
else
{
    <div class="card">
        <div class="card-header">
            No roles create yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button to create a role
            </h5>
            <a class="btn btn-primary" style="width:auto"
               asp-action="CreateRole" asp-controller="Administration">Create Role</a>
        </div>
    </div>
}

